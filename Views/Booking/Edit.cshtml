@model RestaurantIsolaApp.Models.Booking

@{
    ViewData["Title"] = "Redigera bokning";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Redigera bokning</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Namn</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">E-post</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNr" class="control-label">Telefonnummer</label>
                <input asp-for="PhoneNr" class="form-control" />
                <span asp-validation-for="PhoneNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumbOfPersons" class="control-label">Antal personer</label>
                <input asp-for="NumbOfPersons" class="form-control" />
                <span asp-validation-for="NumbOfPersons" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookedDate" class="control-label">Datum</label>
                <input asp-for="BookedDate" class="form-control" min="@DateTime.Now.Date.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="BookedDate" class="text-danger"></span>
                <span class="text-danger">@ViewData["noValidDay"]</span>
            </div>
            <div class="form-group">
                <label asp-for="BookedTime" class="control-label">Tid</label>
                <input asp-for="BookedTime" class="form-control" min="16:00" max="22:00" step="900" />
                <span asp-validation-for="BookedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantId" class="control-label">Restaurang</label>
                <select asp-for="RestaurantId" class="form-control" asp-items="ViewBag.RestaurantId"></select>
                <span asp-validation-for="RestaurantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till alla bokningar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
