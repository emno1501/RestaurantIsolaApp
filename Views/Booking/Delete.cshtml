@model RestaurantIsolaApp.Models.Booking

@{
    ViewData["Title"] = "Ta bort bokning";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ta bort bokning</h1>

<h3>Är du säker att du vill ta bort bokningen?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Namn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            E-post
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Telefonnummer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNr)
        </dd>
        <dt class = "col-sm-2">
            Antal personer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumbOfPersons)
        </dd>
        <dt class = "col-sm-2">
            Datum
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookedDate)
        </dd>
        <dt class = "col-sm-2">
            Tid
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookedTime)
        </dd>
        <dt class = "col-sm-2">
            Restaurang
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.City)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Ta bort" class="btn btn-danger" /> |
        <a asp-action="Index">Tillbaka till bokningar</a>
    </form>
</div>
